{
  "compilerOptions": {
    "declaration": true,          // Generate .d.ts files
    "outDir": "./dist",           // Output directory for .d.ts files
    "module": "CommonJS", // Or "ESNext", depending on your target environment
    "target": "ESNext", // Adjust based on the environments you need to support
    "strict": true,               // Enable all strict type-checking options
  },
  "include": ["src/**/*"],        // Include your source files
  "exclude": ["node_modules"]     // Exclude node_modules
}
